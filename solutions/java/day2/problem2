class Solution {
    public int reverse(int x) {
        int maxi = Integer.MAX_VALUE;
        int mini = Integer.MIN_VALUE;

        long res = 0;
        while(x!=0){
            res+= x%10;
            x/=10;
            res*=10;
        }

        res /= 10;
        if(x<0) res *= -1;

        if(res > maxi || res < mini) return 0;

        return (int)res;
    }
}