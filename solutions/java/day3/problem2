class Solution {
    public int countDistinctIntegers(int[] nums) {
        Set<Integer> set = new HashSet<>();//we need set so that we can know the number of unique numbers

        for(int num : nums){
            int sum = 0;
            set.add(num);
            while(num != 0){ // try to reverse each number
                sum += (num % 10);
                sum *= 10;
                num /= 10;
            }
            sum /= 10;
            set.add(sum);
        }

        return set.size();
    }
}